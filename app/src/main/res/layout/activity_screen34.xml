<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    tools:context=".Screen34Activity">

    <include layout="@layout/toolbar34" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33ffffff"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/img2" />


                <TextView
                    android:fontFamily="@font/arialmt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rect_black"
                    android:letterSpacing="0.6"
                    android:paddingBottom="7dp"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp"
                    android:paddingTop="7dp"
                    android:text="GOOD COAT"
                    android:textColor="#ffffff"
                    android:textSize="5.5sp" />

                <TextView
                    android:fontFamily="@font/sfnsdisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="40dp"
                    android:text="Adding an element of style to this black jacket from\nDorothy Perkins is the fury collar. with a tie-knot and\nbroad checks"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:lineSpacingExtra="4dp"
                    android:textSize="11.5sp" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/share" />
            </FrameLayout>

            <TextView
                android:fontFamily="@font/sfnsdisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="18dp"
                android:textSize="23sp"
                android:text="Tailored from acrylic blend\nfabric,this jacket will keep you\nsnug."
                android:textColor="#ffffff" />

            <!--//123-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#000000"
                android:orientation="horizontal"
                android:padding="15dp">


                <TextView
                    android:fontFamily="@font/sfnsdisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="COLOR AND SIZE"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:tint="#ffffff"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_clear_black_24dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#338d8d8d"/>

            <!--123-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:weightSum="11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:paddingBottom="15dp"
                    android:paddingTop="10.6dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/dot1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="7dp"
                        android:paddingBottom="9dp"
                        android:src="@drawable/ovel_gray" />

                    <ImageView
                        android:id="@+id/dot2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="7dp"
                        android:paddingBottom="9dp"
                        android:src="@drawable/ovel_dark_gray" />

                    <ImageView
                        android:id="@+id/dot3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="7dp"
                        android:paddingBottom="9dp"
                        android:src="@drawable/ovel_gray" />

                    <ImageView
                        android:id="@+id/dot4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="7dp"
                        android:paddingBottom="9dp"
                        android:src="@drawable/ovel_dark_gray" />

                    <ImageView
                        android:id="@+id/dot5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="7dp"
                        android:paddingBottom="9dp"
                        android:src="@drawable/ovel_dark_gray"/>

                    <ImageView
                        android:id="@+id/dot6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="7dp"
                        android:paddingBottom="9dp"
                        android:layout_marginRight="59dp"
                        android:src="@drawable/ovel_gray" />


                    <LinearLayout
                        android:id="@+id/sl_linear"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <View
                                android:id="@+id/sl_view_up"
                                android:layout_width="match_parent"
                                android:layout_height="1.9dp"
                                android:background="#ffffff"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/sl_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/arialmt"
                                android:paddingBottom="4.8dp"
                                android:paddingTop="4.8dp"
                                android:text="SL"
                                android:textColor="#ffffff"
                                android:textSize="12sp" />

                            <View
                                android:id="@+id/sl_view_down"
                                android:layout_width="match_parent"
                                android:layout_height="1.9dp"
                                android:background="#ffffff"
                                android:visibility="visible" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/x_linear"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <View
                                android:id="@+id/x_view_up"
                                android:layout_width="match_parent"
                                android:layout_height="1.9dp"
                                android:background="#ffffff"
                                android:visibility="invisible" />

                            <TextView
                                android:id="@+id/x_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/arialmt"
                                android:paddingBottom="6.1dp"
                                android:paddingTop="4.8dp"
                                android:text="X"
                                android:textColor="#ffffff"
                                android:textSize="11sp" />

                            <View
                                android:id="@+id/x_view_down"
                                android:layout_width="match_parent"
                                android:layout_height="1.9dp"
                                android:background="#ffffff"
                                android:visibility="invisible" />


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/xl_linear"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:gravity="center">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <View
                                android:id="@+id/xl_view_up"
                                android:layout_width="match_parent"
                                android:layout_height="1.9dp"
                                android:background="#ffffff"
                                android:visibility="invisible" />

                            <TextView
                                android:id="@+id/xl_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/arialmt"
                                android:paddingBottom="6.1dp"
                                android:paddingTop="4.8dp"
                                android:text="XL"
                                android:textColor="#ffffff"
                                android:textSize="11sp" />

                            <View
                                android:id="@+id/xl_view_down"
                                android:layout_width="match_parent"
                                android:layout_height="1.9dp"
                                android:background="#ffffff"
                                android:visibility="invisible" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/xs_linear"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:gravity="center">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <View
                                android:id="@+id/xs_view_up"
                                android:layout_width="match_parent"
                                android:layout_height="1.9dp"
                                android:background="#ffffff"
                                android:visibility="invisible" />

                            <TextView
                                android:id="@+id/xs_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/arialmt"
                                android:paddingBottom="6.1dp"
                                android:paddingTop="4.8dp"
                                android:text="XS"
                                android:textColor="#ffffff"
                                android:textSize="11sp" />

                            <View
                                android:id="@+id/xs_view_down"
                                android:layout_width="match_parent"
                                android:layout_height="1.9dp"
                                android:background="#ffffff"
                                android:visibility="invisible" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ls_linear"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:gravity="center">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <View
                                android:id="@+id/ls_view_up"
                                android:layout_width="match_parent"
                                android:layout_height="1.9dp"
                                android:background="#ffffff"
                                android:visibility="invisible" />

                            <TextView
                                android:id="@+id/ls_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/arialmt"
                                android:paddingBottom="6.1dp"
                                android:paddingTop="4.8dp"
                                android:text="LS"
                                android:textColor="#ffffff"
                                android:textSize="11sp" />

                            <View
                                android:id="@+id/ls_view_down"
                                android:layout_width="match_parent"
                                android:layout_height="1.9dp"
                                android:background="#ffffff"
                                android:visibility="invisible" />

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


            <TextView
                android:fontFamily="@font/sfnsdisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:lineSpacingExtra="9.5dp"
                android:text="Ensure yourself top-most level of comfort by getting this grey coloured\nwinter jacket for women by Mustard. It is an essential pick to stay warm\nand cosy this season."
                android:textColor="#6e6e70"
                android:textSize="10.5sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:layout_marginTop="35dp"
                android:orientation="horizontal"
                android:padding="15dp">


                <TextView
                    android:fontFamily="@font/sfnsdisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="COMMENTS, 23"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

                <TextView
                    android:fontFamily="@font/sfnsdisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="15dp"
                    android:text="Add"
                    android:textColor="#ffffff"
                    android:textSize="11.5sp" />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:tint="#ffffff"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/next" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="#33ffffff" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/img2"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="0dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rosalind  Cannon "
                        android:textColor="#ffffff"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Hello, thanks for the goods "
                            android:textColor="#ffffff"
                            android:textSize="10.5sp" />


                        <ImageView
                            android:layout_width="12.5dp"
                            android:layout_height="12.5dp"
                            android:layout_marginLeft="15dp"
                            android:src="@drawable/emoji" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="28dp"
                    android:layout_marginTop="13dp"
                    android:text="07:54 PM"
                    android:textColor="#ffffff"
                    android:textSize="9.5sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:background="#338d8d8d" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/img2"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="0dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Samuel Gray"
                        android:textColor="#ffffff"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Thanks for the jacket "
                            android:textColor="#ffffff"
                            android:textSize="10.5sp" />


                        <ImageView
                            android:layout_width="12.5dp"
                            android:layout_height="12.5dp"
                            android:layout_marginLeft="15dp"
                            android:src="@drawable/thumb" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="28dp"
                    android:layout_marginTop="13dp"
                    android:text="09:27 PM"
                    android:textColor="#ffffff"
                    android:textSize="9.5sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:background="#338d8d8d" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:paddingBottom="19dp"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/like" />

                <TextView
                    android:fontFamily="@font/arialmt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="127"
                    android:layout_gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="10sp" />

                <ImageView
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:tint="#ffffff"
                    android:layout_gravity="center"
                    android:layout_marginLeft="32dp"
                    android:src="@drawable/whatsapp" />

                <TextView
                    android:fontFamily="@font/arialmt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="19 comments"
                    android:textColor="#ffffff"
                    android:textSize="10sp" />

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginLeft="15dp"
                    android:tint="#ffffff"
                    android:layout_gravity="center"
                    android:src="@drawable/forward" />

                <TextView
                    android:fontFamily="@font/arialmt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="13"
                    android:textColor="#ffffff"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>